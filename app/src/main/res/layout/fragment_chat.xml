<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"

    >

  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="409dp"


      android:layout_height="657dp"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgg11"
        android:layout_width="150dp"
        android:layout_height="134dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="15dp"
         android:src="@drawable/can"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="20dp"
        android:text="Take Photo"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="20dp"
        android:text=" Name"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/oname"
        android:layout_width="359dp"
        android:layout_height="59dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/spiner1"

        android:drawableStart="@drawable/enter"
        android:drawableLeft="@drawable/enter"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"

        android:layout_marginTop="4dp"
        android:layout_marginRight="20dp"
        android:text="Age"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/oage"
        android:layout_width="359dp"
        android:layout_height="59dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/spiner1"

        android:drawableStart="@drawable/enter"
        android:drawableLeft="@drawable/enter"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"

        android:layout_marginTop="4dp"
        android:layout_marginRight="20dp"
        android:text="DOB"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/odob"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/spiner1"
        android:drawableStart="@drawable/datee"
        android:drawableLeft="@drawable/datee"
        android:ems="10"
        android:focusable="false"
        android:inputType="phone"
        android:maxLength="10"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"

        android:layout_marginTop="4dp"
        android:layout_marginRight="20dp"
        android:text="Gender"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/ogender"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/spiner1"
        android:ems="10"
        android:inputType="phone"
        android:maxLength="10"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/o"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btnnn"
        android:text="update"
        android:textColor="@color/white" />


  </LinearLayout>

</android.support.constraint.ConstraintLayout>